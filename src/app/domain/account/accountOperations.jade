.col-md-12
  h1(translate) Account's operations
  a(href='' ng-click='ctrl.goBack()' translate) Back
  .container.margin-bottom
    p(ng-if='ctrl.accountOperations && ctrl.accountOperations.length === 0' translate) No accounts
    div(ng-if='ctrl.accountOperations && ctrl.accountOperations.length > 0')
      table.table.table-responsive.table-striped.table-bordered.table-hover(ng-table='ctrl.accountOperationsTableParams')
        tr(ng-repeat='accountOperation in $data track by accountOperation.id')
          td(title="'Lender'|translate") {{accountOperation.lenderName}}
          td(title="'Debtor'|translate") {{accountOperation.debtorName}}
          td(title="'Amount'|translate") {{accountOperation.total}}
          td(title="'Comment'|translate") {{accountOperation.comment}}
          td(title="'Lender confirmed at'|translate") {{accountOperation.lenderConfirmedAt}}
          td(title="'Debtor confirmed at'|translate") {{accountOperation.debtorConfirmedAt}}
